##############################################################################
# general declaration and symbols
##############################################################################

##############################################################################
# checking os to select correct extension
##############################################################################
ifeq ($(OS),Windows_NT)
    EXT=.exe
	RMC=rm
	RMF=-r -f
else
	RMC=rm
	RMF=-r -f
endif

##############################################################################
# all target
##############################################################################
.PHONY: all
all: clean
	doxygen doxy.conf

##############################################################################
# Cleaning targets
##############################################################################
.PHONY: clean
clean:
	@$(RMC) $(RMF) html
	@$(RMC) $(RMF) latex
	@$(RMC) $(RMF) doxy.log
